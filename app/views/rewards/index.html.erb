<% @rewards.each do |reward| %>
  <li><%= reward.name %></li>
  <% if current_user.default? %>
    <%= link_to "get reward", reward %>
  <% end %>
  <% if current_user.admin? %>
    <ul>
      <li><%= link_to "edit", edit_reward_path(reward.id) %></li>
      <li><%= link_to "delete", reward_path(reward.id), method: :delete %></li>
    </ul>
  <% end %>
<% end %>
      <% if current_user.admin? %>
        <%= link_to "Add reward", new_reward_path %>
        <%= link_to "Dashboard", current_user %>
      <% end %>
